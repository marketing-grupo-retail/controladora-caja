!------------------------------------------------------------------------------
! Calcula un descuento al medio de pago
! retorna el monto de descuento
!------------------------------------------------------------------------------
function descuentoPago( monto , tarjeta , codPago ) external
   integer*4 descuentoPago
   string monto,   \ Monto del medio de pago
          tarjeta, \ Tarjeta
          codPago  ! Codigo de medio de pago
end function

!------------------------------------------------------------------------------
! consulta el descuento asociado a un pago
! retorna el monto del descuento que fue aplicado
!------------------------------------------------------------------------------
function consultaPago( monto , tarjeta , codPago ) external
   integer*4 consultaPago
   string monto,   \ Monto del medio de pago
          tarjeta, \ Tarjeta
          codPago  ! Codigo de medio de pago
end function

